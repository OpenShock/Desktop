@using System.Reflection
@using OpenShock.Desktop.Ui.Pages.Dash
@using OpenShock.Desktop.Ui.Utils
@using OpenShock.Desktop.Ui.ErrorHandling

<MudThemeProvider Theme="ThemeDefinition.DesktopTheme" IsDarkMode="true"/>
<MudPopoverProvider/>
<MudDialogProvider/>
<MudSnackbarProvider/>

<div style="position: absolute; top:0; left: 0; height: 1px; width: 100%; background-color: var(--mud-palette-divider); z-index: 9999"></div>

<ContainerWithExceptionHandling>
        <Router AppAssembly="@typeof(Main).Assembly">
            <Found Context="routeData">
                <RouteView DefaultLayout="typeof(DashLayout)" RouteData="@routeData"/>
                <FocusOnNavigate RouteData="@routeData" Selector="h1"/>
            </Found>
            <NotFound>
                <LayoutView Layout="@typeof(DashLayout)">
                    <p role="alert">Sorry, there's nothing at this address. How did you get here?</p>
                </LayoutView>
            </NotFound>
        </Router>
</ContainerWithExceptionHandling>

